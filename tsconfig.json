{
  "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "declaration": true,
      "noImplicitAny": false,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "strictNullChecks": false,
      "baseUrl": ".",
      "paths": {
          "@/*": [
              "artifacts/*",
              "typechain/*"
          ]
      },
      "resolveJsonModule": true,
  },
  "include": [
      "./scripts",
      "./test",
      "./typechain",
      "./deploy"
  ],
  "files": [
      "./hardhat.config.ts"
  ]
}
